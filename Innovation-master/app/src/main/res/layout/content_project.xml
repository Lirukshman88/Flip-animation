<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:text=""
        android:id="@+id/productID"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="500px"
        android:layout_height="200px"
        android:id="@+id/picture"
        android:src="@drawable/ic_action_name"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productContacts"
        android:layout_marginTop="51dp"
        android:text=""
        android:layout_below="@+id/productSchools"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productSchools"
        android:layout_marginTop="49dp"
        android:text=""
        android:layout_below="@+id/productLocation"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productLocation"
        android:layout_marginTop="44dp"
        android:text=""
        android:layout_below="@+id/productPurpose"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productPurpose"
        android:layout_marginTop="30dp"
        android:text=""
        android:layout_below="@+id/productType"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDescription"
        android:layout_marginTop="64dp"
        android:text=""
        android:layout_below="@+id/product"
        android:layout_toEndOf="@+id/productID" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productType"
        android:layout_marginTop="29dp"
        android:text=""
        android:layout_below="@+id/productDescription"
        android:layout_toEndOf="@+id/productID" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product"
        android:layout_marginTop="66dp"
        android:text=""
        android:layout_below="@+id/productID"
        android:layout_alignParentStart="true" />

</RelativeLayout>

